<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
           http://www.liquibase.org/xml/ns/dbchangelog
           http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="0001-create-users-resources-reservations" author="you">
        <!-- users -->
        <createTable tableName="users">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="email" type="VARCHAR(255)"/>
            <column name="full_name" type="VARCHAR(255)"/>
        </createTable>

        <!-- resources -->
        <createTable tableName="resources">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(200)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT"/>
        </createTable>

        <!-- reservations -->
        <createTable tableName="reservations">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="resource_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="start_time" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="end_time" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="version" type="BIGINT"/>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>

        <!-- foreign keys -->
        <addForeignKeyConstraint baseTableName="reservations"
                                 baseColumnNames="resource_id"
                                 referencedTableName="resources"
                                 referencedColumnNames="id"
                                 constraintName="fk_reservation_resource"/>
        <addForeignKeyConstraint baseTableName="reservations"
                                 baseColumnNames="user_id"
                                 referencedTableName="users"
                                 referencedColumnNames="id"
                                 constraintName="fk_reservation_user"/>

        <!-- index -->
        <createIndex indexName="idx_reservations_resource_start_end" tableName="reservations">
            <column name="resource_id"/>
            <column name="start_time"/>
            <column name="end_time"/>
        </createIndex>

        <rollback>
            <dropTable tableName="reservations" cascadeConstraints="true"/>
            <dropTable tableName="resources" cascadeConstraints="true"/>
            <dropTable tableName="users" cascadeConstraints="true"/>
        </rollback>
    </changeSet>

</databaseChangeLog>